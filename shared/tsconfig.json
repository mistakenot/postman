{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./lib",
    "preserveConstEnums": true,
    "removeComments": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "typings/**/*",
    "node_modules/@types/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
